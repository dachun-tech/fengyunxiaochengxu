/** competition / index / index.wxss **/

@import "../../templates/getUserInfoModal/getUserInfoModal.wxss";

/************* fixed authorize button **************/

.fixed_button {
    position: fixed;
    bottom: 40rpx;
    left: 622rpx;
    width: 88rpx;
    height: 88rpx;
    line-height: 38rpx;
    padding-top: 4rpx;
    background: #EF641C;
    color: white;
    border-radius: 12rpx;
    -webkit-border-radius: 12rpx;
    -moz-border-radius: 12rpx;
    -ms-border-radius: 12rpx;
    -o-border-radius: 12rpx;
    z-index: 10;
    text-align: center;
    font-size: 28rpx;
}

.fixed_button text {
    color: white;
}


/*********** top menu part *************/

.index_top_view {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: #ECECEC;
    height: 88rpx;
    z-index: 7;
}

.news-image {
    position: fixed;
    z-index: 9;
    left: 30rpx;
    top: 12rpx;
    width: 65rpx;
    height: 65rpx;
}

.news-new-count {
    position: fixed;
    z-index: 10;
    left: 76rpx;
    top: 8rpx;
    width: auto;
    min-width: 30rpx;
    line-height: 30rpx;
    background-color: red;
    color: white;
    border-radius: 50%;
    text-align: center;
    font-size: 20rpx;
    pointer-events: none;
}

.topmenu-box {
    position: fixed;
    z-index: 10;
    top: 14rpx;
    left: 120rpx;
    width: 150rpx;
    height: 60rpx;
    line-height: 60rpx;
    opacity: 0.9;
    background: #fff;
    border-radius: 6rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #333333;
    letter-spacing: -0.22rpx;
}

.box-icon {
    position: absolute;
    z-index: 10;
    width: 16rpx;
    height: 10rpx;
    top: 26rpx;
    right: 10rpx;
}

.inner-box {
    margin-left: 0;
    width: 110rpx;
    line-height: 60rpx;
    height: 60rpx;
    text-align: center;
}

.topmenu-box.status {
    left: 290rpx;
    width: 200rpx;
}

.topmenu-box.type {
    left: 510rpx;
    width: 210rpx;
}


/**********  filter menu selector part ***********/

.modal-mask {
    position: fixed;
    left: 0;
    top: 88rpx;
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
}

.modal-menu {
    position: fixed;
    top: 14rpx;
    width: 200rpx;
    max-height: 50vh;
    z-index: 1010;
    background: white;
    border-radius: 8rpx;
    border: none;
}

.display_show {
    position: relative;
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
    border: none;
    border-top: 1px solid #d8d8d8;
    font-size: 24rpx;
}

.menu-item {
    position: relative;
}

.display_show.selected {
    color: #6cab3b;
}

.img_check {
    position: absolute;
    width: 16rpx;
    height: 16rpx;
    right: 10rpx;
    top: 22rpx;
}


/*********** team item part ************/

.table-view {
    position: absolute;
    top: 88rpx;
    width: 100%;
    background: #f4f4f4;
}

.item-container {
    position: relative;
    background: white;
    width: 100%;
    height: 240rpx;
    margin-bottom: 20rpx;
}

.item-status-icon {
    position: absolute;
    left: 0;
    top: 20rpx;
    width: 140rpx;
    height: 38rpx;
    line-height: 38rpx;
    background: #489CE5;
    color: white;
    font-size: 24rpx;
    padding-left: 0;
    text-align: center;
    border-top-right-radius: 12rpx;
    border-bottom-right-radius: 12rpx;
}

.item-status-icon.mine {
    background: #6cab3b;
}

image.item-image {
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
}

.item-content {
    position: relative;
    padding: 30rpx 0 0;
    padding-left: 230rpx;
    width: 750rpx;
}

.item-title {
    width: 490rpx;
    font-size: 30rpx;
    line-height: 46rpx;
    font-weight: bold;
    color: #333333;
}

.item-info {
    padding: 2rpx 0;
    font-size: 24rpx;
    display: flex;
    justify-content: center;
    align-content: flex-end;
    align-items: flex-end;
    color: #333333;
}

.item-info-cell {
    align-self: center;
    flex: auto;
    padding-right: 20rpx;
    line-height: 1;
}

.item-info-cell.right {
    width: 160rpx;
    align-self: flex-end;
    text-align: right;
}

.item-info-cell.right button {
    position: relative;
    width: 160rpx;
    height: 56rpx;
    line-height: 56rpx;
    background: #6cab3b;
    color: white;
    font-size: 26rpx;
}

.item-info-cell.right button.favorited {
    background: white;
    color: #6cab3b;
    border: 1px solid #6cab3b;
    font-size: 26rpx;
}

.info-type {
    display: inline-block;
    vertical-align: middle;
}

.item-info-cell.text {
    width: 160rpx;
    padding: 0;
    line-height: 1;
    vertical-align: top;
    font-size: 20rpx;
    color: #888888;
    text-align: center;
    border: none;
}

.item-info-cell.text.status1 {
    background: #e6b53c;
}

.item-info-cell.text.status2 {
    background: white;
    border: 1px solid #6cab3b;
    border-right: none;
    color: #6cab3b;
}

.item-info-cell.text.status3 {
    background: #6cab3b;
}

.item-info-cell.text.status4 {
    background: #ccc;
}