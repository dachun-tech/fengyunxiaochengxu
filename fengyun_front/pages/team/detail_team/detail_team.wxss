/** competition / index / index.wxss **/

@import "../../templates/getUserInfoModal/getUserInfoModal.wxss";
@import "../../templates/fixedButtons/fixedButtons.wxss";

/*********** top title part **************/

.item-container {
    position: relative;
    background: white;
    width: 100%;
    height: 240rpx;
    padding: 0;
}

image.item-image {
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    width: 180rpx;
    height: 180rpx;
}

.item-content {
    position: relative;
    padding: 30rpx 0 0;
    padding-left: 230rpx;
    width: 750rpx;
}

.item-title {
    width: 490rpx;
    font-size: 30rpx;
    line-height: 46rpx;
    font-weight: bold;
    color: #333333;
    padding-bottom: 10rpx;
}

.item-info {
    padding: 2rpx 0;
    font-size: 24rpx;
    display: flex;
    justify-content: center;
    align-content: flex-end;
    align-items: flex-end;
    color: #333333;
    width: 530rpx;
    position: absolute;
    top: 130rpx;
}

.item-info-cell {
    align-self: center;
    flex: auto;
    padding-right: 20rpx;
    line-height: 1;
}

.info-type {
    display: inline-block;
    vertical-align: middle;
}

.item-info-cell.right {
    width: 160rpx;
    align-self: flex-end;
    text-align: right;
}

.item-info-cell.right.text {
    line-height: 1;
    vertical-align: top;
    font-size: 20rpx;
    color: #888888;
    text-align: center;
    border: none;
    padding: 8rpx 30rpx 0 0;
}

.item-info-cell.right button {
    position: relative;
    width: 160rpx;
    height: 56rpx;
    line-height: 56rpx;
    background: #6cab3b;
    color: white;
    font-size: 26rpx;
}

.item-info-cell.right.status1 button {
    background: white;
    border: 1px solid #6cab3b;
    color: #6cab3b;
}


/**************  top menu part ***********************/

.top-menu {
    background: #ececec;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
}

.menu-item {
    padding: 0;
    margin: 0;
    display: inline-block;
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #6cab3b;
    border-top: 1px solid #6cab3b;
    border-bottom: 1px solid #6cab3b;
    background: white;
}

.menu-item:first-child {
    border-top-left-radius: 12rpx;
    border-bottom-left-radius: 12rpx;
    border-left: 1px solid #6cab3b;
}

.menu-item:last-child {
    border-top-right-radius: 12rpx;
    border-bottom-right-radius: 12rpx;
    border-right: 1px solid #6cab3b;
}

.menu-item.selected {
    background: #6cab3b;
    color: white;
}


/************** bottom view part *****************/

.table-view {
    position: absolute;
    top: 340rpx;
    width: 100%;
    background: #f4f4f4;
}

