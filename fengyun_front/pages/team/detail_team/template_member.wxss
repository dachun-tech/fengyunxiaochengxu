/************* advertise-section part **************/

.member-row {
    width: 100%;
    height: 120rpx;
    display: flex;
    justify-content: center;
    padding: 0;
    background: white;
    border-bottom: 1px solid #d8d8d8;
    margin: 0;
}

.member-info {
    color: #333333;
    flex: 45%;
    text-align: left;
    height: auto;
    line-height: 120rpx;
    align-self: center;
    border: none;
}

.member-info:last-child {
    flex: 55%;
}

.member-info view {
    display: inline-block;
    vertical-align: middle;
    width: auto;
    height: 100%;
    line-height: 38rpx;
    margin: 0;
    margin-right: 30rpx;
    font-size: 26rpx;
    color: #333333;
}

.member-icon {
    width: 50rpx;
    height: 50rpx;
    display: inline-block;
    vertical-align: middle;
    margin: 0 30rpx;
}

.member-info view.member-name {
    width: 120rpx;
    margin-right: 20rpx;
}

.member-info view.member-number {
    width: 74rpx;
    text-align: right;
    margin: 0;
}

.member-info.buttons {
    text-align: right;
    padding: 0;
}

.member-info.buttons view {
    position: relative;
    width: 120rpx;
    height: 38rpx;
    margin: 0 10rpx;
    padding: 0;
    background: #6cab3b;
    border-radius: 12rpx;
    text-align: center;
    color: white;
    font-size: 24rpx;
}

.member-info.buttons view:last-child {
    margin-right: 30rpx;
}

.member-info.buttons view.apply-member-button {
    font-size: 26rpx;
    background: #489CE5;
    width: 160rpx;
    height: 56rpx;
    line-height: 56rpx;
}

.member-info.buttons view.button-delete {
    background: transparent;
    width: 40rpx;
    height: 40rpx;
    padding: 0;
}

.member-info.buttons view.button-delete image {
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
}

.member-row:last-child {
    width: 100%;
    margin: 100rpx 0 100rpx;
    background: transparent;
    border: none;
}

.member-button {
    width: 100%;
    padding: 0;
    margin: 30rpx 0;
    text-align: center;
}

button.member-submit-button {
    display: inline-block;
    width: 240rpx;
    height: 74rpx;
    line-height: 74rpx;
    color: white;
    background: #6cab3b;
    font-size: 30rpx;
    font-weight: bold;
    margin: 0 30rpx;
    border-radius: 12rpx;
}

button.member-submit-button.applied {
    background: white;
    border: 1px solid #6cab3b;
    color: #6cab3b;
}

button.member-submit-button.waiting {
    background: transparent;
    color: #6cab3b;
    border: none;
}