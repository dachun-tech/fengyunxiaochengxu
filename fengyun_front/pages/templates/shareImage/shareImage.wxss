/************** share image area *******************/

canvas {
    position: fixed;
    top: 0;
    left: 1030px;
    z-index: 100;
}

.canvas-container {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 100;
    background: rgba(0, 0, 0, .4);
    overflow: hidden;
    top: 0;
    left: 0;
}

.show_canvas {
    position: absolute;
    left: 50%;
    top: 40rpx;
    width: 730rpx;
    height: 725rpx;
    z-index: 100;
    transform: translateX(-50%);
}

.canvas_image {
    width: 100%;
    height: 100%;
    border-radius: 24rpx;
}

.status-message {
    position: fixed;
    width: 500rpx;
    height: 70rpx;
    line-height: 70rpx;
    left: 135rpx;
    bottom: 96rpx;
    background: black;
    color: white;
    font-size: 26rpx;
    opacity: 0.7;
    text-align: center;
    border-radius: 12rpx;
    z-index: 100;
}